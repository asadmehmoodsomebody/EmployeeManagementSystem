
@{
    ViewBag.Title = "MonthlyAttendance";
}
<input type="hidden" id="GetActiveTab" value="#MonthlyAttendance" />

<div class="row no-gutters">
    <div class="col-8">
        <span class="spanicon font-weight-bolder text-info">
            Monthly Attendance </span>
    </div>
</div>
<div class="row mt-3 bg-primary no-gutters m-0 text-white">
    <div class="col-12 m-0" style="height: 40px;">
        <span class="spanicon font-weight-bolder">
            <i class="fas fa-calculator ml-3  mt-2">    &nbsp;Monthly Attendance</i>
        </span>
    </div>
</div>
<div class="bg-white  no-gutters">
    <div class="row  pt-3 ml-5 mr-4">
        <div class="col-10 col-md-6 col-xl-3">
            <P class="font-weight-bold mb-1">Employee</P>
            <select class="form-control shadow border-0">
                <option>Please select Employee</option>
            </select>
        </div>
        <div class="col-10 col-md-6 col-xl-3">
            <P class="font-weight-bold mb-1">From Date</P>
            <input type="date" class="form-control shadow border-0">
        </div>
        <div class="col-10 col-md-6 col-xl-3">
            <P class="font-weight-bold mb-1">To Date</P>
            <input type="date" class="form-control shadow border-0">
        </div>
        <div class="col-10  col-md-6 col-xl-3">
            <button type="submit" class="bg-info text-white border-0 shadow form-control btn-filter">Filter</button>
        </div>
    </div>
    <div class="tbl-div mt-3">
        <table class="table table-striped table-bordered tbl">
            <tr>
                <th>S/L</th>
                <th>Date</th>
                <th>In Time</th>
                <th>Out Time</th>
                <th>Working Time</th>
                <th>Late</th>
                <th>Late Time</th>
                <th>OverTime</th>
                <th>Status</th>
            </tr>
        </table>
        <hr class="mt-5">
        <p class="ml-2">No data have found</p>
    </div>
</div>
<div class="row bg-white no-gutters">
    <div class="col-8 mt-5">
        <p class="ml-2">Showing 0 to 0 of 0 entries</p>
    </div>
    <div class="col-4 mt-5">
        <div class="pagination float-right mr-4">
            <button type="button">previous</button>
            <button type="button">1</button>
            <button type="button">Next</button>
        </div>
    </div>
</div>