
@{
    ViewBag.Title = "Index";
}

<div class="pt-2 px-3">


    <div class="row no-gutters w-100">
        <div class="col-6">
            <form action="index" method="get" class="form-inline">
                <input type="search" value="@ViewData["search"]" class="form-control" name="search" placeholder="Search by task,project"/>
                <button class="btn btn-secondary mr-2">Search</button>
            </form>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <div class="btn btn-primary">Add Task</div>
        </div>
    </div>
    <div class="row no-gutters w-100" >
        <table class="table">
            <tr>
                <th>#</th>
                <th>Project</th>
                <th>Task</th>
                <th>Assigned to</th>
                <th>Assigned by</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </table>
    </div>
</div>
