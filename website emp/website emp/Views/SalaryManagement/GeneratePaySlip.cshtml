
@{
    ViewBag.Title = "GeneratePaySlip";
}
<input type="hidden" id="GetActiveTab" value="#GeneratePaySlip" />
<link href="~/CustomCSS/Salary Module Css/generate payslip.css" rel="stylesheet" />
<script src="~/Scripts/jenerate-payslip.js"></script>
<script src="~/Scripts/GeneratePayslip.js"></script>
<div class="Big-Box mt-3">
    <div class="bg-white">
        <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center justify-content-xl-start">
            <h5 class="mt-2">Generate Payslip</h5>
        </div>
        <div class="row m-3">
            <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center">
                <label class="mb-0 mt-2 ">Select Department</label>
            </div>
            <div class="col-12 col-xl-5 col-md-8 d-flex   text-justify justify-content-center justify-content-sm-center">
                <select class="form-control shadow">
                    <option>IT</option>
                    <option>Accountant</option>
                    <option>Marketing</option>
                    <option>Bussiness</option>
                </select>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center">
                <label class="mb-0 mt-2 ">Select Month</label>
            </div>
            <div class="col-12 col-xl-5 col-md-8 d-flex   text-justify justify-content-center justify-content-sm-center">
                <input type="date" class="form-control shadow">
            </div>
        </div>
        <div class="row m-3 pb-4">
            <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center">
            </div>
            <div class="col-12 col-xl-5 col-md-8 d-flex  text-justify  justify-content-sm-center justify-content-center  justify-content-lg-center mt-3 mt-xl-0 mt-md-0">
                <button type="submit" class="shadow border-0 font-weight-bold text-white form-control bg-info b-go">Go</button>
            </div>
        </div>
    </div>
</div>
<div class="Big-Box mt-3">
        <h4 class="mt-3 pl-3">Generate Payslip For August 2020</h4>
    <div class="row m-3">
        <div class="col-12 col-md-8 col-xl-8">
            <p class="mb-0">Search</p>
            <input type="text" class="shadow form-control" placeholder="Search By Employee Name" />
        </div>
        <div class="col-12  col-md-4 col-xl-4 mt-4">
            <button type="submit" class="bg-info form-control shadow text-white">  Search</button>
        </div>
    </div>
        <div class="tbl-div">
            <table class="table table-striped table-bordered tbl">
                <tr class="text-white">
                    <th>Emp ID</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Payroll Template</th>
                    <th>Net Salary</th>
                    <th>Status</th>
                    <th class="d-flex">Action <input type="checkbox" onclick="toggle(this)" style="width:20px; height:20px; margin-top:5px; margin-left:5px" /></th>
                </tr>
                @for (var a = 401; a <= 420; a++)
                {
                    <tr>
                        <td>@a</td>
                        <td>Zumaid Khattak</td>
                        <td>Web Developer</td>
                        <td>It</td>
                        <td>Rs:35000</td>
                        <td>38000</td>
                        <td>
                            <button type="button" class="bg-danger text-white shadow border-0 form-control">unpaid</button>
                        <td>
                            <button type="button" class="text-white bg-info shadow form-control w-75 border-0 d-inline mb-0">Make Payment</button>
                            <input type="checkbox" class="d-inline" name="isselect" style="width:20px; height:20px; margin-left:5px" />
                        </td>
                    </tr>
                }
            </table>
        </div>
    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6 d-flex text-justify justify-content-center justify-content-lg-start justify-content-sm-center">
            <p>Showing page 1 of 1</p>
        </div>
        <div class="col-12 col-md-6 col-xl-6 d-flex text-justify justify-content-center justify-content-sm-center justify-content-lg-end mt-3 mt-xl-0 mt-md-0">
            <div class="pagination">
                <button type="submit" class="page-link form-control shadow">Previous</button>
                <button type="submit" class="page-link form-control shadow">1</button>
                <button type="submit" class="page-link form-control shadow">2</button>
                <button type="submit" class="page-link form-control shadow">3</button>
                <button type="submit" class="page-link form-control shadow">Next</button>
            </div>
        </div>
    </div>
    </div>
