
@{
    ViewBag.Title = "GeneratePaySlip";
}
<input type="hidden" id="GetActiveTab" value="#GeneratePaySlip" />
<link href="~/CustomCSS/Salary Module Css/generate payslip.css" rel="stylesheet" />
<script src="~/Scripts/jenerate-payslip.js"></script>
<div class="Big-Box mt-3">
    <div class="bg-white">
        <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-start">
            <h5 class="mt-2">Generate Payslip</h5>
        </div>
        <div class="row m-3">
            <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center">
                <label class="mb-0 mt-2 ">Select Department</label>
            </div>
            <div class="col-12 col-xl-5 col-md-8 d-flex   text-justify justify-content-center justify-content-sm-center input-group">
                <select class="form-control shadow">
                    <option>IT</option>
                    <option>Accountant</option>
                    <option>Marketing</option>
                    <option>Bussiness</option>
                </select>
                <div class="input-group-append shadow"><span class="input-group-text fas fa-home"></span></div>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center">
                <label class="mb-0 mt-2 ">Select Month</label>
            </div>
            <div class="col-12 col-xl-5 col-md-8 d-flex   text-justify justify-content-center justify-content-sm-center input-group">
                <input type="date" class="form-control shadow">
                <div class="input-group-append shadow"><span class="input-group-text fas fa-calendar-alt"></span></div>
            </div>
        </div>
        <div class="row m-3 pb-4">
            <div class="col-12 col-xl-3 col-md-4 d-flex text-justify justify-content-center justify-content-sm-center">
            </div>
            <div class="col-12 col-xl-5 col-md-8 d-flex  text-justify  justify-content-sm-center justify-content-center  justify-content-lg-center mt-3 mt-xl-0 mt-md-0">
                <button type="submit" class="shadow border-0 font-weight-bold text-white form-control bg-info b-go">Go</button>
                @*<div class="input-group-append shadow"><span class="input-group-text fas fa-arrow-alt-circle-right pt-2 d-flex "></span></div>*@
            </div>
        </div>
    </div>
</div>
<div class="Big-Box mt-3">
        <h4 class="mt-3 pl-3">Generate Payslip For August 2020</h4>
    <div class="row m-3 no-gutters">
        <div class="col-12 col-md-4 col-xl-6 d-flex text-justify justify-content-sm-center justify-content-center">
            <select class="shadow select-pages">
                <option>10</option>
                <option>25</option>
                <option>50</option>
                <option>100</option>
            </select>
            <p class="d-inline ml-3">Records per page</p>
        </div>
        <div class="col-12 col-md-2 col-xl-1  d-flex text-justify  justify-content-center justify-content-center">
        </div>
        <div class="col-12 col-md-2 col-xl-1  d-flex text-justify  justify-content-center justify-content-center">
            <p class="d-inline mb-0 pt-2">Search</p>
        </div>
        <div class="col-12  col-md-4 col-xl-4 d-flex text-justify  justify-content-center justify-content-sm-end  input-group">
            <input type="text" class="shadow  form-control">
            @*<div class="input-group-append shadow"><span class="input-group-text fas fa-search d-flex"></span></div>*@
            <button type="submit" class="input-group-append shadow fas fa-search"></button>
        </div>
    </div>
        <div class="tbl-div">
            <table class="table table-striped table-bordered tbl">
                <tr class="text-white">
                    <th>Emp ID</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Payroll Template</th>
                    <th>Net Salary</th>
                    <th>Status</th>
                    <th>View Details</th>
                    <th class="pl-5">Action</th>
                </tr>
                @for (var a = 401; a <= 420; a++)
                {
                    <tr>
                        <td>@a</td>
                        <td>Zumaid Khattak</td>
                        <td>Web Developer</td>
                        <td>It</td>
                        <td>Rs:35000</td>
                        <td>38000</td>
                        <td>
                            <button type="button" class="bg-danger text-white shadow border-0 form-control">unpaid</button>
                        </td>
                        <td><button type="button" class="bg-info border-0 shadow  text-white form-control"><i class="fas fa-photo-video"></i></button></td>
                        <td>
                            <button type="button" class="text-white bg-info shadow border-0 form-control ">Make Payment</button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    <div class="row mt-5 no-gutters pb-4">
        <div class="col-12  col-md-6 col-xl-5 d-flex text-justify justify-content-sm-center justify-content-center justify-content-xl-start ml-xl-3">
            <p class="ml-2 d-inline">Showing 1 to 10 of 10 entries</p>
        </div>
        <div class="col-12 col-md-6  col-xl-6 d-flex text-justify  justify-content-sm-center justify-content-xl-end justify-content-center pagination ">
            <button type="submit">Previous</button>
            <button type="submit">1</button>
            <button type="submit">2</button>
            <button type="submit">3</button>
            <button type="submit">Next</button>
        </div>
    </div>
    </div>
