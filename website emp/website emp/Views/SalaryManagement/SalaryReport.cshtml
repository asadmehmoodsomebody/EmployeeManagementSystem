@model Pagination<website_emp.Models.Invoice>
@{
    ViewBag.Title = "SalaryReport";
    int rowcount = 1 + ((Model.PageNumber - 1) * 10);
}

<link href="~/CustomCSS/Salary Module Css/salary-report.css" rel="stylesheet" />
<input type="hidden" id="GetActiveTab" value="#SalaryReport" />

<div class="mt-3 Big-Box">
    <div class="row m-3">
        <div class="col-12 d-flex text-justify justify-content-center justify-content-sm-center justify-content-xl-start">
            <h5 class="mt-2">Salary Report</h5>
        </div>
        </div>
    <form>
        <div class="row m-3">
            <div class="col-12 col-xl-6 col-md-6">
                <label class="mb-0 mt-2">Select Year</label>
                <select name="year" class="form-control shadow">
                    <script>
                        for (let i = 0 ; i < 20; i++) {
                            let value = '@ViewData["year"]';
                            if (value == (2010 + i).toString()) {
                                document.write(`<option selected value='${2010 + i}'>${2010 + i}</option>`);
                            } else {
                                document.write(`<option value='${2010 + i}'>${2010 + i}</option>`);
                            }
                            
                        }
                    </script>
                </select>
            </div>
            <div class="col-12 col-xl-6 col-md-6">
                <label class="mb-0 mt-2">Select Month</label>
                <select name="month" class="form-control shadow">
                    <script>
                        let months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                        for (let i = 0 ; i < months.length; i++) {
                            debugger;
                            let value = (parseInt('@ViewData["month"]')-1).toString();
                            if (value == i.toString()) {
                                document.write(`<option selected value='${i+1}'>${months[i]}</option>`);
                            } else {
                                document.write(`<option value='${i+1}'>${months[i]}</option>`);
                            }

                        }
                    </script>
                </select>
            </div>
        </div>
        <div class="row m-3">
            <div class="col-12 col-md-6 col-xl-6 mt-3">
                <input type="text" name="username" value="@ViewData["username"]" class="form-control shadow" placeholder="Search By Employee Name" />
            </div>
            <div class="col-12 col-xl-6 col-md-6 mt-3">
                <button type="submit" class="shadow border-0 font-weight-bold text-white form-control bg-info b-view">View</button>
            </div>
        </div>
    </form>
    </div>
    <div class="Big-Box mt-3">
    <div class="col-12 d-flex text-justify justify-content-center justify-content-sm-center justify-content-xl-start">
        <h5 class="mb-2 mt-2">Total Salary Report</h5>
    </div>
        <div class="tbl-div">
            <table class="table table-bordered table-striped  tbl">
                <tr class="text-white">
                    <th>Emp Id</th>
                    <th>Emp Name</th>
                    <th>Year</th>
                    <th>Month</th>
                    <th>Net Salary</th>
                </tr>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>@rowcount</td>
                        <td>@item.employe.FirstName</td>
                        <td>@item.ForMonth.Value.Year</td>
                        <td>@item.ForMonth.Value.Month</td>
                        <td>@item.NetSalary</td>
                    </tr>
                }
            </table>
        </div>
        <div class="row no-gutters w-100">
            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center justify-content-md-start pl-0 pl-md-2">
                <p class="text-justify">
                    page <span id="start-number">@Model.PageNumber</span>&nbsp;of <span id="total-pages">@Model.TotalPages</span>
                </p>
            </div>
            <div class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end align-items-center pr-0 pr-md-2">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        @if (!Model.HasPrevious)
                        {
                            <li class="page-item disabled"><a class="page-link disabled" href="#">Previous</a></li>
                        }
                        else
                        {
                            <li class="page-item "><a class="page-link" href="@Url.Action("SalaryReport", "SalaryManagement", new { search = ViewData["username"],year = ViewData["year"],month = ViewData["month"], pagenumber = Model.PageNumber - 1 })">Previous</a></li>
                        }
                        @{
                            int i = 1;
                            if (Model.PageNumber - 2 > 1)
                            {
                                i = Model.PageNumber - 2;
                            }
                            for (; i <= (Model.PageNumber + 2) && i <= Model.TotalPages; i++)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("SalaryReport", "SalaryManagement",new { search = ViewData["username"],year = ViewData["year"],month = ViewData["month"],pagenumber=i})">@i</a></li>
                            }
                        }

                        @*<li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>*@
                        @if (!Model.HasNext)
                        {
                            <li class="page-item disabled"><a class="page-link disabled" href="@Url.Action("SalaryReport", "SalaryManagement",new { search = ViewData["username"],year = ViewData["year"],month = ViewData["month"],pagenumber=ViewData["pagenumber"]})">Next</a></li>
                        }
                        else
                        {
                            <li class="page-item "><a class="page-link" href="@Url.Action("SalaryReport", "SalaryManagement",new { search = ViewData["username"],year = ViewData["year"],month = ViewData["month"],pagenumber=Model.PageNumber+1})">Next</a></li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    
</div>