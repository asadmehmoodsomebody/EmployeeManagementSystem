

@{
    ViewBag.Title = "AddIncrement";
}

<input type="hidden" id="GetActiveTab" value="#ManageIncrement" />
<link href="~/customcss/increment.css" rel="stylesheet" />
<div class="Big-Box mt-3">
    <div class="row m-3">
        <div class="col-12 d-flex justify-content-center justify-content-sm-center justify-content-lg-start mt-2">
            <h5>Add Increment</h5>
        </div>
    </div>

    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
            <p>Employee Name</p>
            <select class="form-control shadow">
                <option>Select one</option>
            </select>
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p>Select Month</p>
            <input type="date" class="form-control shadow">
        </div>
    </div>
    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
            <p>Increment Amount</p>
            <input type="text" class="form-control shadow" placeholder="Enter Increment Amount">
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p>Increment Description</p>
            <textarea class="form-control shadow txtarea" placeholder="Enter Employee Description"></textarea>
        </div>
    </div>
    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
           
        </div>
        <div class="col-12 col-md-3 col-xl-3 mt-xl-5 mt-md-5 mt-2 ">
            <button type="submit" class="bg-info text-white form-control shadow">Add Increment</button>
        </div>
        <div class="col-12 col-md-3 col-xl-3 mt-xl-5 mt-md-5 mt-2">
            <button type="submit" class="bg-danger text-white form-control shadow">@Html.ActionLink("Cancal", "ManageIncrement", null, new { @class = "text-decoration-none text-white" })</button>
        </div>
    </div>
</div>