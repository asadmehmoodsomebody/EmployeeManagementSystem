@model Pagination<website_emp.Models.Deduction>
@{
    ViewBag.Title = "ManageDeduction";
    int rowcount = 1 + ((Model.PageNumber - 1) * 10);
}

<input type="hidden" id="GetActiveTab" value="#ManageDeduction" />
<link href="~/CustomCSS/Salary Module Css/Deduction.css" rel="stylesheet" />
<div class="Big-Box mt-3">
    <div class="row m-3">
        <div class="col-12 d-flex justify-content-center justify-content-sm-center justify-content-lg-start mt-2">
            <h5>Manage Deduction</h5>
        </div>
    </div>
    <form action="@Url.Action("ManageDeduction","SalaryManagement")" method="get">
        <div class="row m-3">
            <div class="col-12 col-md-4 col-xl-3 d-flex justify-content-center justify-content-sm-start mt-2">
                @Html.ActionLink("Add Deduction", "AddDeduction", null, new { @class = "text-decoration-none text-white text-center btn-primary form-control shadow" })
            </div>
            <div class="col-12 col-md-5 col-xl-4 d-flex justify-content-center justify-content-sm-center mt-2">
                <input type="text" name="search" value="@ViewData["search"]" placeholder="Search By Employee Name" class="form-control shadow">
            </div>
            <div class="col-12 col-md-3 col-xl-3 d-flex justify-content-center justify-content-sm-end mt-2">
                <button type="submit" class="bg-primary text-white form-control shadow">Search</button>
            </div>
        </div>
    </form>
    <div class="tbl-div">
        <table class="table table-striped tbl">
            <tr class="bg-info text-white">
                <th>#</th>
                <th>Employee Name</th>
                <th>Designation</th>
                <th>Deduction Name</th>
                <th>Deduction Month</th>
                <th>Deduction Amount</th>
                <th>Date Addded</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>@rowcount</td>
                <td>@item.employe.FirstName</td>
                <td>@item.employe.designation.DesignationName</td>
                <td>@item.ComName</td>
                <td>@item.ForMonth.Value.ToShortDateString()</td>
                <td>@item.Amount</td>
                <td>@item.CreatedOn.Value.ToShortDateString()</td>
                <td>@Html.ActionLink("Edit", "EditDeduction", new { deductionid =item.DeductionId}, new { @class = "text-decoration-none text-white text-center btn-primary form-control shadow" })</td>
            </tr>
                rowcount++;
            }
        </table>
    </div>
    <div class="row no-gutters w-100">
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center justify-content-md-start pl-0 pl-md-2">
            <p class="text-justify">
                page <span id="start-number">@Model.PageNumber</span>&nbsp;of <span id="total-pages">@Model.TotalPages</span>
            </p>
        </div>
        <div class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end align-items-center pr-0 pr-md-2">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (!Model.HasPrevious)
                    {
                        <li class="page-item disabled"><a class="page-link disabled" href="#">Previous</a></li>
                    }
                    else
                    {
                        <li class="page-item "><a class="page-link" href="@Url.Action("ManageDeduction", "SalaryManagement", new { search = ViewData["search"], pagenumber = Model.PageNumber - 1 })">Previous</a></li>
                    }
                    @{
                        int i = 1;
                        if (Model.PageNumber - 2 > 1)
                        {
                            i = Model.PageNumber - 2;
                        }
                        for (; i <= (Model.PageNumber + 2) && i <= Model.TotalPages; i++)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("ManageDeduction","SalaryManagement",new { search =ViewData["search"],pagenumber=i})">@i</a></li>
                        }
                    }

                    @*<li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>*@
                    @if (!Model.HasNext)
                    {
                        <li class="page-item disabled"><a class="page-link disabled" href="@Url.Action("Index","Task",new { search =ViewData["search"],pagenumber=ViewData["pagenumber"]})">Next</a></li>
                    }
                    else
                    {
                        <li class="page-item "><a class="page-link" href="@Url.Action("ManageDeduction","SalaryManagement",new { search =ViewData["search"],pagenumber=Model.PageNumber+1})">Next</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>

</div>