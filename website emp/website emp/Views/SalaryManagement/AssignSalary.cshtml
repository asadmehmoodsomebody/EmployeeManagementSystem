@model Pagination<website_emp.Models.Employe>
@{
    ViewBag.Title = "AssignSalary";
    int rowcount = 1 + ((Model.PageNumber - 1) * 10);
}
<input type="hidden" id="GetActiveTab" value="#AssignSalary" />
<link href="~/CustomCSS/Salary Module Css/assign-salary-to-employee.css" rel="stylesheet" />
<script src="~/Scripts/assign-salary-to-employee.js"></script>
<div class="mt-3 Big-Box">
    <div>
        <div class="col-12 col-xl-12 col-md-12 d-flex text-justify justify-content-center justify-content-sm-start">
            <h5>Assign Salary To Employee</h5>
        </div>
        <form action="@Url.Action("AssignSalary","SalaryManagement")" method="get">
            <div class="row m-4">

                <div class="col-12  col-md-4 col-xl-4">
                    <P class="font-weight-bold mb-0">Select Department</P>
                    @Html.DropDownList("departmentid",ViewData["Departments"] as SelectList,new { @class= "form-control shadow" })
                    
                </div>
                <div class="col-12  col-md-4 col-xl-4 mt-4">
                    <button type="submit" class="bg-info text-white  shadow form-control btn-filter">Go</button>
                </div>
            </div>
        </form>
            </div>
    <div class="row m-3">
        <div class="col-3"></div>
        <form action="@Url.Action("AssignSalary","SalaryManagement")" method="get">
            <div class="col-12 col-md-6 col-xl-6">
                <P class="font-weight-bold mb-0">Search</P>
                <input type="hidden" name="departmentid" value="@ViewData["departmentid"]" />
                <input type="text" name="employename" value="@ViewData["search"]"  class="form-control shadow" placeholder="Search by Emp-Name">
            </div>
            <div class="col-12 col-md-3 col-xl-3 mt-4">
                <button type="submit" class="bg-info text-white form-control shadow">Search</button>
            </div>
        </form>
        <div class="tbl-div mt-4">
            <table class="table table-bordered mt-0 table-striped tbl">
                <tr class="text-white bg-info">
                    <th>Emp Id</th>
                    <th>Employee Name</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Tempalate Name</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {

                    <tr>
                        <form action="@Url.Action("AssignSalary","SalaryManagement")" method="post">
                            <input type="hidden" value="@item.EmployeId" name="EmployeId" />
                            <td>@rowcount</td>
                            <td>@item.FirstName</td>

                            <td>
                                @item.designation.DesignationName
                            </td>
                            <td>
                                @item.department.DepartmentName
                            </td>
                            <td>
                                <input value="@item.Salary" name="Salary" />
                            </td>
                            <td>
                                <button type="submit" class="bg-info text-white shadow form-control border-0">Submit</button>
                            </td>
                        </form>
                    </tr>
                    rowcount++;
                }

            </table>
        </div>
    </div>
    <div class="row no-gutters w-100">
        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center justify-content-md-start pl-0 pl-md-2">
            <p class="text-justify">
                page <span id="start-number">@Model.PageNumber</span>&nbsp;of <span id="total-pages">@Model.TotalPages</span>
            </p>
        </div>
        <div class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end align-items-center pr-0 pr-md-2">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (!Model.HasPrevious)
                    {
                        <li class="page-item disabled"><a class="page-link disabled" href="#">Previous</a></li>
                    }
                    else
                    {
                        <li class="page-item "><a class="page-link" href="@Url.Action("AssignSalary", "SalaryManagement", new { search = ViewData["search"],departmentid = ViewData["departmentid"], pagenumber = Model.PageNumber - 1 })">Previous</a></li>
                    }
                    @{
                        int i = 1;
                        if (Model.PageNumber - 2 > 1)
                        {
                            i = Model.PageNumber - 2;
                        }
                        for (; i <= (Model.PageNumber + 2) && i <= Model.TotalPages; i++)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("AssignSalary", "SalaryManagement", new { search = ViewData["search"],departmentid = ViewData["departmentid"], pagenumber =i })">@i</a></li>
                        }
                    }

                    @*<li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>*@
                    @if (!Model.HasNext)
                    {
                        <li class="page-item disabled"><a class="page-link disabled" href="@Url.Action("AssignSalary", "SalaryManagement", new { search = ViewData["search"],departmentid = ViewData["departmentid"], pagenumber = Model.PageNumber+1 })">Next</a></li>
                    }
                    else
                    {
                        <li class="page-item "><a class="page-link" href="@Url.Action("AssignSalary", "SalaryManagement", new { search = ViewData["search"],departmentid = ViewData["departmentid"], pagenumber = Model.PageNumber+1 })">Next</a></li>
                    }
                </ul>
            </nav>
        </div>
    </div>


    
</div>


