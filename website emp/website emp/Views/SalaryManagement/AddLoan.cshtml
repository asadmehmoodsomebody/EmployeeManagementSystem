@model website_emp.Models.Loan

@{
    ViewBag.Title = "AddLoan";
}

<input type="hidden" id="GetActiveTab" value="#ManageLoan" />
<link href="~/customcss/Salary Module Css/Loan.css" rel="stylesheet" />
<div class="Big-Box mt-3">
    <div class="row m-3">
        <div class="col-12 d-flex justify-content-center justify-content-sm-center justify-content-lg-start mt-2">
            <h5>Add Loan</h5>
        </div>
    </div>

    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
            <p>Employee Name</p>
            <select class="form-control shadow">
                <option>Select one</option>
            </select>
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p>Loan Name</p>
            <input type="text" class="form-control shadow" placeholder="Enter Loan Name">
        </div>
    </div>
    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
            <p>Number Of Installment</p>
            <input type="date" class="form-control shadow">
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p>Loan Amount</p>
            <input type="text" class="form-control shadow" placeholder="Enter Loan Amount">
        </div>
    </div>
    <div class="row m-3">
        <div class="col-12 col-xl-6 mb-3">
            <p>Loan Description</p>
            <textarea class="form-control shadow txtarea" placeholder="Enter Employee Description"></textarea>
        </div>
        <div class="col-12 col-md-6 col-xl-3 mb-3">
            <button type="submit" class="bg-primary text-white form-control shadow">Add Loan</button>
        </div>
        <div class="col-12 col-md-6 col-xl-3 mb-3">
         @Html.ActionLink("Cancal", "ManageLoan", null, new { @class = "btn-danger text-center btn text-white form-control shadow text-decoration-none" })
        </div>
    </div>
</div>