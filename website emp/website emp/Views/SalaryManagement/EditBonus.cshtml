@model website_emp.Models.Earning
@{
    ViewBag.Title = "EditBonus";
}

<input type="hidden" id="GetActiveTab" value="#ManageBonus" />
<link href="~/customcss/Salary Module Css/bonus.css" rel="stylesheet" />
<div class="Big-Box mt-3">
    <div class="row m-3">
        <div class="col-12 d-flex justify-content-center justify-content-sm-center justify-content-lg-start mt-2">
            <h5>Edit Bonus</h5>
        </div>
    </div>
@using (Html.BeginForm())
{
    <input type="hidden" name="EarningId" value="@Model.EarningId" />
    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
            <p>Employee Name</p>
            <p>@Html.DisplayFor(model => model.employe.FirstName)</p>
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p>Bonus Name</p>
            @Html.EditorFor(model => model.ComName, new { htmlAttributes = new { @class = "form-control shadow" } })
        </div>
    </div>
    <div class="row m-3">
        <div class="col-12 col-md-6 col-xl-6">
            <p>Bonus Month</p>
            @Html.EditorFor(model => model.ForMonth, new { htmlAttributes = new { @class = "form-control shadow" } })
        </div>
        <div class="col-12 col-md-6 col-xl-6">
            <p>Bonus Amount</p>
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control shadow" } })
        </div>
    </div>
    <div class="row m-3">
        <div class="col-12 col-xl-6">
            @*<p>Bonus Description</p>
            <textarea class="form-control shadow txtarea"></textarea>*@
        </div>
        <div class="col-12 col-md-6 col-xl-3 mb-3">
            <button type="submit" class="bg-primary text-white form-control shadow">Update Bonus</button>
        </div>
        <div class="col-12 col-md-6 col-xl-3 mb-3">
            <button type="submit" class="bg-danger text-white form-control shadow">@Html.ActionLink("Cancal", "ManageBonus", null, new { @class = "text-decoration-none text-white" })</button>
        </div>
    </div>
}
</div>