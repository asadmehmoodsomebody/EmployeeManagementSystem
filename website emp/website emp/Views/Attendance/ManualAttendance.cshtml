
@{
    ViewBag.Title = "ManualAttendance";
}
<link href="~/CustomCSS/Attendance Module Css/ManualAttendance.css" rel="stylesheet" />
<input type="hidden" id="GetActiveTab" value="#ManualAttendance" />
<div class="Big-Box mt-3">
    <div class="row bg-primary no-gutters m-0 text-white">
        <div class="col-12 m-0" style="height: 40px;">
            <span class="">
                <i class="fas fa-clipboard ml-3  mt-2"> Manual Attendance</i>

            </span>
        </div>
    </div>
    <div class="row mb-3 m-2">
        <div class="col-sm-12 col-md-4 col-xl-4   mt-1">
            Select Department
            
            <select class="form-control"><option>It</option>
            <option>EMR</option>
            <option>SMR</option>
            <option>Billing</option></select>
        </div>
        <div class="col-sm-12 col-md-4 col-xl-4 mt-1">
            Date
            <input type="date" class="form-control">
        </div>
        <div class="col-sm-12 col-md-4 col-xl-4 mt-4">
            <input type="submit" class="form-control text-white font-weight-bold bg-info shadow" value="Filter">
        </div>
    </div>

    
        <div class="Custom-Table-box">
            <table class="table table-striped ">
                <thead class="Custom-Table-Heading">
                    <tr>
                        <th>Employee ID</th>
                        <th>Employee Name</th>
                        <th>In Time</th>
                        <th>Out Time</th>
                    </tr>
                </thead>
                <tr>
                    <td>12</td>
                    <td>Ismail</td>
                    <td><input type="time" class="form-control"></td>
                    <td><input type="time" class="form-control"></td>
                </tr>
                
               @for(int i = 1; i<=100; i++)
               {
                   <tr>
                       <td>@i</td>
                       <td>Ismail</td>
                       <td><input type='time' class='form-control'></td>
                       <td><input type='time' class='form-control'></td>
                       
                   </tr>

                   //document.write("<tr>");
                   //document.write("<td>"+i*2+"</td>");
                   //document.write("<td>"+"Ismail"+"</td>");
                   //document.write("<td>"+"<input type='time' class='form-control'>"+"</td>");
                   //document.write("<td>"+"<input type='time' class='form-control'>"+"</td>");
                   //document.write("</tr>");
               }


                


            </table>

        </div>

    
    <div class="row mt-3">
        <div class="col-sm-12 col-lg-9 d-flex text-justify justify-content-center justify-content-sm-start">
            <p class="mt-3">Showing 1 of 10 Pages</p>
        </div>
        <div class="col-sm-12 col-lg-3 d-flex justify-content-center  justify-content-sm-start">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>
</div>

