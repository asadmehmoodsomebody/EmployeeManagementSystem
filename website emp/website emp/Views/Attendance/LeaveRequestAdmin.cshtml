
@{
    ViewBag.Title = "LeaveRequestAdmin";
}
<link href="~/CustomCSS/Attendance Module Css/LeaveRequestAdmin.css" rel="stylesheet" />
<input type="hidden" id="GetActiveTab" value="#LeaveRequestAdmin" />
<div class="Big-Box">
    <div class="row mt-3 bg-primary no-gutters m-0 text-white">
        <div class="col-12 m-0" style="height: 40px;">
            <span class="spanicon font-weight-bolder">
                <i class="fas fa-calculator ml-3  mt-2">    &nbsp;Requested Application</i>
            </span>
        </div>
    </div>
    <div class="bg-white  no-gutters">
        <div class="tbl-div overflow-auto mt-3">
            <table class="Tbl-Leave-Request-Admin table table-striped table-bordered">
                <tr>
                    <th>S/L</th>
                    <th>Employee Name</th>
                    <th>Leave Type</th>
                    <th>Request Duration</th>
                    <th>Submit Date</th>
                    <th>Leave Days</th>
                    <th>Purpose</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                <script>
                        for(let i = 1; i <=5; i++)
                        {
                            document.write("<tr>");

                            document.write("<td>" + i + "</td>");
                            document.write("<td>" + "Ismail" + "</td>");
                            document.write("<td>" + "Casual" + "</td>");
                            document.write("<td>" + "02-09-2019 To 10-09-2019" + "</td>");
                            document.write("<td>" + "02-09-2019" + "</td>");
                            document.write("<td>" + "8" + "</td>");
                            document.write("<td>" + "A Trip to Afghanistan" + "</td>");

                            document.write("<td>" + "<span class='bg-success text-white'>Accepted</span>" + "</td>");
                            document.write("<td>" + "<button>Accept</button><button>Reject</button></td>");



                            document.write("</tr>");
                        }
                </script>
            </table>
            
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-sm-12 col-lg-9 d-flex text-justify justify-content-center justify-content-sm-start">
            <p class="mt-3">Showing 1 of 10 Pages</p>
        </div>
        <div class="col-sm-12 col-lg-3 d-flex justify-content-center  justify-content-sm-start">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
        </div>
    </div>

</div>

