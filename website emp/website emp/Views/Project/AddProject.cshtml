@model website_emp.Models.Project
@{
    ViewBag.Title = "AddProject";
}
<style>
    .main-div-min-height{
        min-height:500px;
    }
    .project-add-form{
        position:relative;
        height:fit-content;
    }
    .project-add-btn-div{
        position:absolute;
        bottom:5px;
        right:2.5px;
    }
</style>

<main>
    <div class="row no-gutters w-100 align-content-center p-2 border-bottom">
        <div class="col-11 d-flex align-self-center">
            <h5 class="m-0 p-0">Add Project</h5>
        </div>
    </div>
    
       @using (@Html.BeginForm("AddProject","Project",FormMethod.Post,new { @autocomplete="off"}))
       {
        <div class="row w-100 no-gutters justify-content-center px-2 pt-0 pt-lg-5 bg-light py-3 main-div-min-height shadow">
            <div class="col-12 col-lg-8 bg-white p-2 project-add-form rounded pb-5">
                <div class="row no-gutters w-100">
                    <div class="col-12 col-lg-6 px-2">
                        <h5 class="jumbotron-fluid"><small>Departments: </small></h5>
                        @Html.DropDownList("DepartmentId", ViewData["DepartmentId"] as SelectList,new { @class="form-control rounded-0 shadow-none"})
                    </div>
                    <div class="col-12 col-lg-6 px-2">
                        <h5 class="jumbotron-fluid"><small>Project Name</small></h5>
                        <input type="text" class="form-control rounded-0 shadow-none" name="ProjectTitle" />
                    </div>
                </div>
                <div class="row no-gutters w-100 mt-3">
                    <div class="col-12 col-lg-6 px-2">
                        <h5 class="jumbotron-fluid"><small>Start Date:</small></h5>
                        <input class="form-control rounded-0 shadow-none date" name="StartDate" type="datetime" />
                    </div>
                    <div class="col-12 col-lg-6 px-2">
                        <h5 class="jumbotron-fluid"><small>End Date:</small></h5>
                        <input class="form-control rounded-0 shadow-none date" name="EndDate" type="datetime" />
                    </div>
                </div>
                <div class="row no-gutters w-100 mt-3">
                    <div class="col-12 px-2">
                        <h5 class="jumbotron-fluid"><small>Description:</small></h5>
                        <textarea class="form-control rounded-0 shadow-none" name="ProjectDescription" style="resize:none;"></textarea>
                    </div>
                </div>
                <div class="row no-gutters w-100 mt-3 project-add-btn-div justify-content-end">
                    <div class="col-12 col-lg-3 px-2 d-flex align-items-center justify-content-end">
                        <button class="btn-block rounded-0 shadow-none btn-primary" type="submit">Add</button>
                    </div>
                </div>
            </div>
        </div>
       }
        
</main>
<script>
    $(".date").datepicker();
</script>

