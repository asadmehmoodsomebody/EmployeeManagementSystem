
@{
    ViewBag.Title = "Department";
}
<input type="hidden" id="GetActiveTab" value="#Department" />

<link href="~/CustomCSS/Department.css" rel="stylesheet" />
<main class="mt-3">
    <div class="row no-gutters w-100">
        <div class="col-12 col-md-3 manage-roles">
            <div class="row no-gutters pr-0 pr-md-2 w-100">
                <div class="col-12 add-roles">
                    <div class="roles-title">
                        <span class="bg-info pl-1 d-block font-weight-bold text-white">Add Department</span>
                    </div>
                    <div class="roles-body py-1 px-3">
                        <h5 class="m-0"><small class="font-weight-bold">Department Name</small></h5>
                        <input class="form-control shadow-0 rounded-0 add-role-input">
                        <div class="add-roles-button d-flex justify-content-end align-items-center mt-2">
                            <button class="btn rounded-pill mr-2 c-roles-rights-button" style="background: #f0f0f0;">Cancel</button>
                            <button class="btn btn-info rounded-pill c-roles-rights-button">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-9 mt-1 mt-md-0 Departments">
            <div class="row w-100 no-gutters btn-info align-items-center roles-title">
                <div class="col-6 Department-list-row-left"><span class="text-white d-block font-weight-bold m-0">Department</span></div>
                <div class="col-6 Department-list-row-title"><span class="text-white d-block font-weight-bold m-0 text-right">Action</span></div>
            </div>
            <div class="Departments-body pr-1">
                <script>
                            for (let i = 0 ; i  < 3 ; i++){
                                document.write(`<div class="row Department-list-tile mb-1 no-gutters w-100 align-items-center roles-list-row">
                        <div class="col-6 Department-list-row-left"><span class="d-block m-0">Department Name</span></div>
                        <div class="col-6 Departments-list-row-right d-flex justify-content-end"><a href="#" class="m-0 text-right"><span class="d-block edit-icon" ></span></a>&nbsp;
                            <a href="#" class=" m-0 text-right"><span class="d-block delete-icon" ></span></a>
                        </div>
                        </div>`);
                            }
                </script>

            </div>
            <div class="Department-list-footer">
                <div class="row no-gutters w-100">
                    <div class="col-12 col-md-6 d-flex align-items-center justify-content-center justify-content-md-start pl-0 pl-md-2">
                        <p class="text-justify">
                            page <span id="start-number">1</span>&nbsp;of <span id="total-pages">10</span>
                        </p>
                    </div>
                    <div class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end pr-0 pr-md-2">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

