@model website_emp.Models.Shift
@{
    ViewBag.Title = "UpdateShift";
}
@functions {
    public string getDate (DateTime? time)
    {
        return (time.HasValue) ? time.Value.ToString() : "";
    }
}

<input type="hidden" id="GetActiveTab" value="#ShiftsDetail" />
<div class="row mt-3">
    <div class="col-12">
        <span class="spanicon font-weight-bolder text-info">
            <i class="fas fa-tachometer-alt"></i>
            ShiftDetail
        </span>
        <span>/UpdateShift</span>
    </div>
</div>
<div class="Big-Box mt-3">
    <div class="row">
        <div class="col-12">
            <h3 class="bg-info text-white pl-1"><small>Update Shift</small></h3>
        </div>
    </div>
    @using (Html.BeginForm())
    {
    <input type="hidden" value="@Model.ShiftId" name="ShiftId" />
    <div class="row no-gutters w-100 p-3">
        <div class="col-12 col-md-4 col-xl-4 px-1">
            <label class="font-weight-bold mb-0 mt-2">Shift Name</label>
            <input type="text" placeholder="Name" name="ShiftName" value="@Model.ShiftName" class="form-control rounded-0 shadow">
        </div>
        <div class="col-12 col-md-4 col-xl-4 px-1">
            <label class="font-weight-bold mb-0 mt-2">Start Time</label>
            <input type="text" placeholder="mm/dd/yyyy hh/mm am/pm" name="ShiftStartTime" value="@getDate(Model.ShiftStartTime)" class="form-control rounded-0 shadow">
        </div>
        <div class="col-12 col-md-4 col-xl-4 px-1">
            <label class="font-weight-bold mb-0 mt-2">End Time</label>
            <input type="text" placeholder="mm/dd/yyyy hh/mm am/pm" name="ShiftEndTime" value="@getDate(Model.ShiftEndTime)" class="form-control rounded-0 shadow">
        </div>
    </div>

    <div class="row w-100 no-gutters p-3 justify-content-end">
        <div class="col-12 col-md-4 col-xl-4 px-1">
            <button type="submit" class="form-control text-white bg-info  rounded-0 shadow border-00 btn-submit mb-3">Update</button>
        </div>
    </div>}
</div>

