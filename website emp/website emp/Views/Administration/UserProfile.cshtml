
@{
    ViewBag.Title = "Profile";
}
<link href="~/CustomCSS/userfpofile_css.css" rel="stylesheet" />
<link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
<div class="Big-Box mt-3">
    <!--Main row start-->
    <div class="row  flex-column-reverse flex-xl-row">
        <div class="col-12 col-md-12 col-xl-9">
            <h3 class="d-flex text-justify justify-content-center justify-content-sm-start m-3">Edit Profile</h3>
            <div class="row m-1">
                <div class="col-12 col-md-4 col-xl-4 ">
                    <label class="mb-0 mt-3">Company</label>
                    <input type="text" class="form-control shadow">
                </div>
                <div class="col-12 col-md-4 col-xl-4">
                    <label class="mb-0 mt-3">Username</label>
                    <input type="text" class="form-control shadow">
                </div>
                <div class="col-12 col-md-4 col-xl-4">
                    <label class="mb-0 mt-3">Email Address </label>
                    <input type="text" class="form-control shadow">
                </div>
            </div>
            <!--******************************-->
            <div class="row m-1">
                <div class="col-12 col-md-6 col-xl-6">
                    <label class="mb-0 mt-3">First Name</label>
                    <input type="text" class="form-control shadow">
                </div>
                <div class="col-12 col-md-6 col-xl-6">
                    <label class="mb-0 mt-3">Last Name</label>
                    <input type="text" class="form-control shadow">
                </div>
            </div>
            <!--******************************-->
            <div class="row m-1">
                <div class="col-12  col-xl-12">
                    <label class="mb-0 mt-3">Address</label>
                    <input type="text" class="form-control shadow">
                </div>
            </div>
            <!--******************************-->
            <div class="row m-1">
                <div class="col-12 col-md-4 col-xl-4">
                    <label class="mb-0 mt-3">City</label>
                    <input type="text" class="form-control shadow">
                </div>
                <div class="col-12 col-md-4 col-xl-4">
                    <label class="mb-0 mt-3">Country</label>
                    <input type="text" class="form-control shadow ">
                </div>
                <div class="col-12 col-md-4 col-xl-4">
                    <label class="mb-0 mt-3">Postal code</label>
                    <input type="text" class="form-control shadow">
                </div>
            </div>
            <!--******************************-->
            <div class="row no-gutters m-3">
                <div class="col-12  col-xl-12">
                    <label class="mb-0 mt-3">About Me</label>
                    <textarea class="form-control  mb-5 shadow  txa-edit"></textarea>
                </div>
            </div>
            <!--******************************-->
        </div>
        <div class="col-12 col-xl-3  text-center">
            <div class="Big-Box">
                <img src="~/Images/zebra.PNG"  class="admin-image"/>
                @*<i class="fas fa-user admin-image"></i>*@

                <div class="mt-4">
                    <button type="button" class="text-white bg-info btn shadow-none">uplode</button>
                    <h6 class="mt-4">Zumaid khan Khattak</h6>
                    <p>Employee Management system hello every one me zumaid say you hi !</p>
                </div>
            </div>
        </div>
    </div>
    <!--Main Row end-->
</div>